<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.PreviousDayRateActivity">

    <Button android:layout_width="match_parent" android:layout_height="wrap_content"
            android:id="@+id/btnPreviousRate"
            android:background="@color/dark_grey"
            android:textColor="@color/gold"
            android:textStyle="bold"
            android:textSize="@dimen/text_regular_2x"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/margin_medium_1"
            android:text="Choose Previous Date"
            android:gravity="center"/>

    <ProgressBar
            android:id="@+id/progress"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="gone"/>

    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin_xxxlarge"
            app:layout_constraintTop_toBottomOf="@+id/btnPreviousRate"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/recyclerExchange"/>

</androidx.constraintlayout.widget.ConstraintLayout>